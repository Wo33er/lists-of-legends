.wow-profile-name {
    font-weight: bold;
    font-size: 18px;
    
    @media screen and (max-width: 650px) {
        font-size: 13px !important;
    }
    
    &.wow-class-1 { color: #C79C6E; }
    &.wow-class-2 { color: #F58CBA; }
    &.wow-class-3 { color: #ABD473; }
    &.wow-class-4 { color: #FFF569; }
    &.wow-class-5 { color: #FFFFFF; }
    &.wow-class-6 { color: #C41F3B; }
    &.wow-class-7 { color: #0070DE; }
    &.wow-class-8 { color: #40C7EB; }
    &.wow-class-9 { color: #8787ED; }
    &.wow-class-10 { color: #00FF96; }
    &.wow-class-11 { color: #FF7D0A; }
    &.wow-class-12 { color: #A330C9; }
}
.wow-profile-spec {
    font-size: 11px;
    color: #dbdbdb;
    font-style: italic;

    &> .wow-race-1:after { content: "Human"; }
    &> .wow-race-2:after { content: "Orc"; }
    &> .wow-race-3:after { content: "Dwarf"; }
    &> .wow-race-4:after { content: "Nightelf"; }
    &> .wow-race-5:after { content: "Undead"; }
    &> .wow-race-6:after { content: "Tauren"; }
    &> .wow-race-7:after { content: "Gnome"; }
    &> .wow-race-8:after { content: "Troll"; }
    &> .wow-race-9:after { content: "Goblin"; }
    &> .wow-race-10:after { content: "Bloodelf"; }
    &> .wow-race-11:after { content: "Draenei"; }
    &> .wow-race-22:after { content: "Worgen"; }
    &> .wow-race-24:after { content: "Pandaren"; }
    &> .wow-race-25:after { content: "Pandaren"; }
    &> .wow-race-26:after { content: "Pandaren"; }
    &> .wow-race-27:after { content: "Nightborne"; }
    &> .wow-race-28:after { content: "High Tauren"; }
    &> .wow-race-29:after { content: "Void Elf"; }
    &> .wow-race-30:after { content: "Light Draenei"; }
    &> .wow-race-34:after { content: "Dark Dwarf"; }
    &> .wow-race-36:after { content: "Mag'har Orc"; }

    &> .wow-class-1:after { content: "Warrior"; }
    &> .wow-class-2:after { content: "Paladin"; }
    &> .wow-class-3:after { content: "Hunter"; }
    &> .wow-class-4:after { content: "Rogue"; }
    &> .wow-class-5:after { content: "Priest"; }
    &> .wow-class-6:after { content: "Death Knight"; }
    &> .wow-class-7:after { content: "Shaman"; }
    &> .wow-class-8:after { content: "Mage"; }
    &> .wow-class-9:after { content: "Warlock"; }
    &> .wow-class-10:after { content: "Monk"; }
    &> .wow-class-11:after { content: "Druid"; }
    &> .wow-class-12:after { content: "Demon Hunter"; }
}

.wow-profile-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: auto;

    &> div {
        flex: 1;
        display: flex;
        justify-content: center;
        text-align: center;
        height: 100%;
        align-items: center;
    }
    & > div:first-of-type {
        margin-left: 10px;
    }
    & > div:last-of-type {
        margin-right: 10px;

        @media screen and (max-width: 650px) {
            margin-right: 0px !important;
        }
    }
}
.wow-character-faction {
    background-image:url('/images/wow-factions.png')
    background-size: 200%;
    background-repeat: no-repeat;
    width: 20px;
    height: 20px;
    position: absolute;
    bottom: -3px;
    left: -3px;

    &.wow-faction-1 {
        background-position: -20px 0;
    }
}