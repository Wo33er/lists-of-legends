.division-profile {
    display: flex;
    background-color: #160f09;
    margin-bottom: 25px;
    min-height: 70px;
    border-radius: 5px;
    overflow: hidden;
}
.division-profile-avatar {
    background-repeat: no-repeat;
    background-size: 100%;
    background-position: 50%;
    width: 50px;
    height: 50px;
    border-radius: 12px;
    display: flex;
    align-self: center;
    margin: 15px;
}
.division-profile-summary {
    display: flex;
    flex: 0 0 auto;
    flex-direction: column;
    justify-content: center;
    width: 125px;
}
.division-profile-name {
    font-weight: bold;
    font-size: 18px;
}
.division-profile-spec {
    font-size: 11px;
    color: #dbdbdb;
    font-style: italic;
}

.division-profile-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: auto;

    &> div {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 0 10px;

        &:hover {
            background-color: black;
            cursor: pointer;
        }
    }
    &> div:last-of-type {
        margin-right: 25px;

        @media screen and (max-width: 650px) {
            margin-right: 0px !important;
        }
    }
    & span {
        font-weight: bold;
        padding-right: 3px;
    }
}
.division-profile-details-text {
    &:before {
        color: #dbdbdb;
        font-weight: bold;
        margin-bottom: 5px;
        text-align: center;
    }
}
.division-profile-details-gearscore {
    &:before {
        content: "Gear #";
    }
}
.division-profile-details-pvelvl {
    &:before {
        content: "PvE Lvl";
    }
}
.division-profile-details-pvplvl {
    &:before {
        content: "PvP Lvl";
    }
}
.division-profile-details-pvekills {
    &:before {
        content: "PvE Kills";
    }
}
.division-profile-details-pvpkills {
    &:before {
        content: "PvP Kills";
    }
}